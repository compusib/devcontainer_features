{
    "basic_setup": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "git-hooks": {}
        }
    },
    "custom_configuration": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "git-hooks": {
                "hooksDir": "custom/hooks/path",
                "autoSetup": true,
                "verbose": true,
                "gitSafeDirectory": "/workspaces/*"
            }
        }
    },
    "manual_setup_only": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "git-hooks": {
                "autoSetup": false
            }
        },
        "postCreateCommand": "setup-git-hooks --hooks-dir my-hooks --verbose"
    },
    "multi_repository_setup": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "git-hooks": {
                "autoSetup": false,
                "gitSafeDirectory": "/workspaces/*"
            }
        },
        "postCreateCommand": [
            "setup-git-hooks --hooks-dir shared-hooks --verbose",
            "cd /workspaces/repo1 && setup-git-hooks --hooks-dir ../shared-hooks",
            "cd /workspaces/repo2 && setup-git-hooks --hooks-dir ../shared-hooks"
        ]
    },
    "with_custom_env": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "git-hooks": {
                "hooksDir": "tools/git-hooks",
                "verbose": true
            }
        },
        "containerEnv": {
            "GIT_HOOKS_CUSTOM_VAR": "value"
        }
    },
    "minimal_with_focal": {
        "image": "mcr.microsoft.com/devcontainers/base:focal",
        "features": {
            "ghcr.io/devcontainers/features/common-utils:1": {
                "installZsh": false,
                "installOhMyZsh": false,
                "upgradePackages": false,
                "username": "octocat"
            },
            "git-hooks": {
                "verbose": false
            }
        },
        "remoteUser": "octocat"
    },
    "no_auto_setup_verbose": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "git-hooks": {
                "autoSetup": false,
                "verbose": true,
                "hooksDir": "project-hooks"
            }
        }
    },
    "empty_git_safe_directory": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "git-hooks": {
                "gitSafeDirectory": ""
            }
        }
    }
}
